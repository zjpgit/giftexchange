/* pages/giftlist/giftlist.wxss */

.header {
    box-sizing: border-box;
    width: 100%;
    height: 140rpx;
    line-height: 100rpx;
    text-align: center;
    z-index: 1;
    position: fixed;
    top: 0rpx;
}

.scroll_w{
  width: 100%;
  height: 140rpx;
  white-space: nowrap;
}

.header .item{
  height: 75rpx;
  width: 170rpx;
  display: inline-block;
  font-size: 28rpx;
  color: black;
  line-height: 75rpx;
  background: #fff;
  border-radius: 80rpx;
  margin: 10rpx 20rpx 10rpx 30rpx;
  box-shadow: 0px 0px 4px #b3b3b3;
}

.header .on{
  color: red;
  border: 1px solid red;
  font-weight: bold;
}

.view_line{
  margin-left: 30rpx;
  width: 100%;
  height: 1px;
  background: #F2F2F2;
}

.goods_type{
  margin-top: 140rpx;
}
.nav_section_items{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 1px solid #F2F2F2;
  margin-left: 30rpx;
  padding:30rpx 0 30rpx 0;
  position: relative;
}
.nav_section_items .section_content .section_content_intro{
  white-space:normal;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.nav_section_items .section_content .price_type{
  font-size: 18px;
  color: #FF4545;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.nav_section_items .section_content .choose_tips{
  font-size: 12px;
  color: #4d4d4d;
}

.nav_section_items .view_choose{
  width:80rpx;
  height:80rpx;
  font-size:26rpx;
  border-radius:100%;
  background:#d24a58;
  line-height: 80rpx;
  color:#fff;
  text-align: center;
  margin-top:35rpx;
}